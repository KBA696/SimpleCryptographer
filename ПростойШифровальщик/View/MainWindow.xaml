<Window x:Class="ПростойШифровальщик.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
                     xmlns:MVVM="clr-namespace:MVVM" 
             xmlns:c="http://schemas.microsoft.com/xaml/behaviors"
        Title="Простой шифровальщик" Height="600" Width="800" MinHeight="600" MinWidth="800">
    <c:Interaction.Triggers>
        <c:EventTrigger EventName="Closing">
            <MVVM:EventToCommand Command="{Binding ElementName=mmm, Path=DataContext.Window_Closing1}" PassEventArgsToCommand="True" />
        </c:EventTrigger>
    </c:Interaction.Triggers>
    <Grid>
        <ContentControl x:Name="mmm" Content="{Binding Content}"/>
    </Grid>
</Window>
